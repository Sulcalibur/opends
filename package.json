{
  "name": "opends",
  "version": "0.2.0",
  "description": "Simple, self-hosted design system documentation tool",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter opends-simplified run dev",
    "dev:docs": "vitepress dev docs --port 5174",
    "build:docs": "vitepress build docs",
    "build": "pnpm --filter opends-simplified run build",
    "test": "pnpm --filter opends-simplified run test",
    "test:simplified": "vitest simplified/src/api/admin/auth.test.ts",
    "lint": "pnpm --filter opends-simplified run lint",
    "typecheck": "pnpm --filter opends-simplified run typecheck",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "prepare": "husky",
    "migrate": "cd simplified && node migrate.js",
    "test-app": "cd simplified && node test-app.js"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.16",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "design-system",
    "documentation",
    "vue",
    "self-hosted",
    "design-tokens"
  ],
  "author": "OpenDS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opends/opends"
  },
  "bugs": {
    "url": "https://github.com/opends/opends/issues"
  },
  "homepage": "https://opends.dev"
}
