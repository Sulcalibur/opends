{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@docs/*": ["./src/docs/*"],
      "@design-system/*": ["./src/design-system/*"],
      "@api/*": ["./src/api/*"]
    },
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  }
}