/* Design Token Utilities */

:root {
  /* Color Tokens */
  {{#each colorTokens}}
  --color-{{cssName}}: {{value}};
  {{/each}}

  /* Spacing Tokens */
  {{#each spacingTokens}}
  --spacing-{{cssName}}: {{value}};
  {{/each}}

  /* Typography Tokens */
  {{#each typographyTokens}}
  --typography-{{cssName}}-font-family: {{value.fontFamily}};
  --typography-{{cssName}}-font-size: {{value.fontSize}};
  --typography-{{cssName}}-font-weight: {{value.fontWeight}};
  --typography-{{cssName}}-line-height: {{value.lineHeight}};
  {{/each}}

  /* Border Radius Tokens */
  {{#each borderRadiusTokens}}
  --border-radius-{{cssName}}: {{value}};
  {{/each}}
}

/* Utility Classes */
{{#each colorTokens}}
.text-{{cssName}} { color: {{value}}; }
.bg-{{cssName}} { background-color: {{value}}; }
{{/each}}

{{#each spacingTokens}}
.p-{{cssName}} { padding: {{value}}; }
.m-{{cssName}} { margin: {{value}}; }
{{/each}}

{{#each typographyTokens}}
.text-{{cssName}} {
  font-family: {{value.fontFamily}};
  font-size: {{value.fontSize}};
  font-weight: {{value.fontWeight}};
  line-height: {{value.lineHeight}};
}
{{/each}}