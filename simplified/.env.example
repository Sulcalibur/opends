# OpenDS Simplified - Environment Variables
# Copy this file to .env.local for development or .env.production for production

# Application
VITE_APP_TITLE="OpenDS"
VITE_ADMIN_PASSWORD="admin" # Change this in production!

# Database
VITE_DATABASE_PATH="./data/opends.db"

# Penpot Integration
VITE_PENPOT_API_URL="https://design.penpot.app/api"
# VITE_PENPOT_API_TOKEN="" # Your Penpot API token

# Figma Integration
# VITE_FIGMA_API_TOKEN="" # Your Figma personal access token

# Development
# NODE_ENV=development
# VITE_DEV_SERVER_PORT=3000

# Production
# NODE_ENV=production
# BASE_URL=/ # For subdirectory deployment

# Optional: API Keys for plugin integration
# VITE_API_KEYS_ENABLED=false
# VITE_API_KEY_HASH="" # Hashed API key for plugin authentication