# OpenDS - Environment Configuration
# Copy this file to .env.local for development

# =============================================================================
# APPLICATION
# =============================================================================
VITE_APP_TITLE="OpenDS"
NODE_ENV="development"
PORT="3000"

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL="postgresql://opends:password@localhost:5432/opends_dev"

# SQLite (for development/testing)
# DATABASE_URL="sqlite:./data/opends.db"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret Keys (MUST be at least 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="change-me-to-random-32-char-minimum-secret-key"
JWT_REFRESH_SECRET="change-me-to-different-random-32-char-secret"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Admin Password (temporary during development)
VITE_ADMIN_PASSWORD="admin-change-in-production"

# Registration Settings
ALLOW_PUBLIC_REGISTRATION="false"  # Invite-only after first user
REQUIRE_EMAIL_VERIFICATION="false"

# Password Policy
PASSWORD_MIN_LENGTH="8"
PASSWORD_REQUIRE_UPPERCASE="true"
PASSWORD_REQUIRE_NUMBER="true"

# Account Lockout
ACCOUNT_LOCKOUT_ATTEMPTS="5"
ACCOUNT_LOCKOUT_DURATION="900"  # 15 minutes

# =============================================================================
# OAUTH PROVIDERS (Optional)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Penpot
VITE_PENPOT_API_URL="https://design.penpot.app/api"
PENPOT_CLIENT_ID=""
PENPOT_CLIENT_SECRET=""

# Figma  
FIGMA_CLIENT_ID=""
FIGMA_CLIENT_SECRET=""

# Storybook
STORYBOOK_URL=""

# =============================================================================
# STORAGE
# =============================================================================
STORAGE_TYPE="local"  # local, s3, r2
STORAGE_PATH="./uploads"

# S3-compatible (if using S3 or Cloudflare R2)
S3_ENDPOINT=""
S3_REGION="us-east-1"
S3_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@opends.dev"

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# =============================================================================
# REDIS (Optional - for caching/rate limiting)
# =============================================================================
REDIS_URL="redis://localhost:6379"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW="15"  # minutes
RATE_LIMIT_MAX_REQUESTS="100"
LOGIN_RATE_LIMIT_MAX_ATTEMPTS="5"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"  # error, warn, info, debug
LOG_FORMAT="pretty"  # json, pretty

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG="false"
VITE_DEV_SERVER_PORT="5173"
API_DELAY="0"  # Simulate API delay (ms)
SEED_DATABASE="false"

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=""
ANALYTICS_ID=""