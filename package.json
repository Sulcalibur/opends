{
  "name": "opends",
  "version": "0.2.0",
  "description": "Simple, self-hosted design system documentation tool",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "dev": "pnpm --filter opends-simplified run dev",


    "build": "pnpm --filter opends-simplified run build && node scripts/pages-output-sync.mjs",
    "test": "pnpm --filter opends-simplified run test",
    "test:simplified": "vitest simplified/src/api/admin/auth.test.ts",
    "lint": "pnpm --filter opends-simplified run lint",
    "typecheck": "pnpm --filter opends-simplified run typecheck",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "prepare": "husky",
    "migrate": "cd simplified && node migrate.js",
    "test-app": "cd simplified && node test-app.js",
    "ci:predeploy": "node scripts/predeploy-checks.mjs",
    "ci:rollback": "node scripts/cloudflare-rollback.mjs"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.23",
    "husky": "^9.0.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.0",

    "vitest": "^4.0.16",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "design-system",
    "documentation",
    "vue",
    "self-hosted",
    "design-tokens"
  ],
  "author": "OpenDS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opends/opends"
  },
  "bugs": {
    "url": "https://github.com/opends/opends/issues"
  },
  "homepage": "https://opends.dev"
}
